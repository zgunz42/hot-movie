<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        tools:context=".MovieActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                android:paddingTop="@dimen/content_spacing"
                android:id="@+id/detail_reviews_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:id="@+id/detail_release"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Release: January 9, 2019"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/detail_poster"
                app:layout_constraintEnd_toStartOf="@+id/detail_poster"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/detail_author"
                tools:text="Label: Joko Anwar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_release"
                android:layout_marginTop="@dimen/content_spacing"
                app:layout_constraintEnd_toStartOf="@+id/detail_poster"
                android:layout_marginEnd="16dp"/>
        <ImageView
                android:layout_height="150dp"
                android:layout_width="120dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/detail_poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/movie_poster"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_reviews_container" android:layout_marginTop="16dp"/>
        <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                style="@style/AppTheme.Heading"
                android:text="@string/head_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_poster"
                android:id="@+id/plot_label"/>
        <TextView
                android:id="@+id/detail_plot"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                tools:text="@sample/movie_plot"
                android:layout_marginTop="@dimen/content_spacing"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintTop_toBottomOf="@+id/plot_label"/>
        <TextView
                style="@style/AppTheme.Heading"
                android:text="@string/header_top_actors"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/actor_label"
                app:layout_constraintTop_toBottomOf="@+id/detail_plot"/>
        <HorizontalScrollView
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="@dimen/fading_edge_large"
                android:layout_marginTop="@dimen/content_spacing"
                android:verticalScrollbarPosition="left"
                android:isScrollContainer="true"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actor_label">
            <LinearLayout
                    android:id="@+id/detail_actors"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>